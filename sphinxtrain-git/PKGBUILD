# This is an example PKGBUILD file. Use this as a start to creating your own,
# and remove these comments. For more information, see 'man PKGBUILD'.
# NOTE: Please fill out the license field for your package! If it is unknown,
# then please put 'unknown'.

# Maintainer: Matthias Jasny <matthiasjasny@gmail.com>
pkgname=sphinxtrain-git
pkgver=20140823
pkgrel=1
pkgdesc="Common library for sphinx speech recognition."
arch=('any')
url="https://github.com/cmusphinx/sphinxtrain"
license=('GPL')
groups=()
depends=()
makedepends=('git')
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=

source=("git://github.com/cmusphinx/sphinxtrain.git")

_pythondir="$pkgdir/usr/lib/python2.7/site-packages"

md5sums=('SKIP') #generate with 'makepkg -g'

build() {
	cd "$srcdir/sphinxtrain/"
	
    ./autogen.sh # --prefix=/usr PYTHON=/usr/bin/python2
    make
}


package() {
	cd "$srcdir/sphinxtrain/"
	
	#install -d $_pythondir
    #PYTHONPATH=$_pythondir 
    make DESTDIR="$pkgdir" install

    install -d "$pkgdir/usr/share/licenses/$pkgname"
    install -m644 COPYING "$pkgdir/usr/share/licenses/$pkgname/"
}
